<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/arm_weapons_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Weapons to Arm"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <android.support.v7.widget.CardView
        android:id="@+id/inventory_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coins_card"
        android:backgroundTint="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/spy_inventory_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/eye"/>
            <TextView
                android:id="@+id/spy_inventory_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textColor="#eee"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/spy_inventory_icon"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/bomb_inventory_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:layout_toLeftOf="@id/spy_inventory_icon"
                android:layout_alignParentLeft="true"
                android:src="@drawable/explosion"/>
            <TextView
                android:id="@+id/bomb_inventory_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textColor="#eee"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/spy_inventory_icon"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_toLeftOf="@id/spy_inventory_icon"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/interference_inventory_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:layout_toRightOf="@id/spy_inventory_icon"
                android:layout_alignParentEnd="true"
                android:src="@drawable/lightning"/>
            <TextView
                android:id="@+id/interference_inventory_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textColor="#eee"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/spy_inventory_icon"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_toRightOf="@id/spy_inventory_icon"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_below="@id/score_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorAccent">
            <android.support.v7.widget.CardView
                android:id="@+id/weapon1"
                android:layout_width="0dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="0.5"
                android:backgroundTint="#4b4b4b"
                android:layout_below="@id/score_text">
                <ImageView
                    android:id="@+id/weapon1_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/none"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/weapon2"
                android:layout_width="0dp"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_weight="0.5"
                android:backgroundTint="#4b4b4b"
                android:layout_below="@id/score_text">
                <ImageView
                    android:id="@+id/weapon2_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/none"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>