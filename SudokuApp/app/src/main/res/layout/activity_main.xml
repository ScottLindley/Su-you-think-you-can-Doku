<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b4b4b"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.scottlindley.suyouthinkyoucandoku.MainMenuActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:rowCount="2">
        <android.support.v7.widget.CardView
            android:id="@+id/solo_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="@string/solo_transition_1"
            app:cardCornerRadius="15dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:layout_column="0"
            android:layout_row="0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Solo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#eee"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/race_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="@string/solo_transition_2"
            app:cardCornerRadius="15dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:layout_column="1"
            android:layout_row="0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Race"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#eee"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/stats_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="@string/solo_transition_4"
            app:cardCornerRadius="15dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:layout_column="0"
            android:layout_row="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Stats"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#eee"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/settings_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="@string/solo_transition_3"
            app:cardCornerRadius="15dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:layout_column="1"
            android:layout_row="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp"
                android:gravity="center"
                android:src="@drawable/ic_settings_white_24dp"/>
        </android.support.v7.widget.CardView>
    </GridLayout>
</RelativeLayout>

